{
  "name": "@rkesters/json-refs",
  "version": "4.0.0",
  "description": "Various utilities for JSON References (http://tools.ietf.org/html/draft-pbryan-zyp-json-ref-03).",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "npm run clean && npx tsc --build --clean",
    "build": "npx tsc -d",
    "clean": "npx rimraf dist && npm run test:clean",
    "test:node": "npx nyc mocha -r ts-node/register ./test/test-json-refs.ts",
    "test:browser": "npx karma start ./test/browser/karma.conf.ts",
    "test:clean": "npx rimraf .coverage && npx rimraf .nyc_output",
    "pretest": "npm run test:clean",
    "test": "npm run test:node && npm run test:browser",
    "posttest": "npm run coverage:merge && npm run coverage:report && npm run coverage:cli && npx rimraf .nyc_output",
    "coverage:report": "npx lcov-viewer lcov -o .coverage/html .coverage/lcov.info",
    "coverage:cli": "npx lcov-cli-report-viewer .coverage/node/lcov.info",
    "coverage:merge": "npx lcov-result-merger --prepend-source-files '.coverage/**/lcov.info' .coverage/lcov.info"
  },
  "author": {
    "name": "Jeremy Whitlock",
    "email": "jwhitlock@apache.org",
    "url": "https://github.com/whitlockjc"
  },
  "contributors": [
    {
      "name": "Robert Kesterson",
      "email": "rkesters@gmail.com"
    }
  ],
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "json-refs": "./bin/json-refs"
  },
  "bugs": {
    "url": "https://github.com/whitlockjc/json-refs/issues"
  },
  "files": [
    "bin",
    "dist"
  ],
  "homepage": "https://github.com/whitlockjc/json-refs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whitlockjc/json-refs.git"
  },
  "keywords": [
    "json"
  ],
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "npx eslint --fix --quiet ./src/**/*.ts"
    ],
    "./test/**/*.ts": [
      "prettier --write",
      "npx eslint --fix --quiet ./test/**/*.ts"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@lcov-viewer/cli": "^1.3.0",
    "@otris/jsdoc-tsd": "^2.0.11",
    "@types/assert": "^1.5.6",
    "@types/bluebird": "^3.5.36",
    "@types/fancy-log": "^2.0.0",
    "@types/graphlib": "^2.1.8",
    "@types/js-yaml": "^4.0.5",
    "@types/json-schema": "^7.0.11",
    "@types/karma": "^6.3.3",
    "@types/lodash": "^4.14.184",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.13",
    "@types/puppeteer": "^5.4.6",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "assert": "^2.0.0",
    "brfs": "~2.0.2",
    "browserify-fs": "^1.0.0",
    "buffer": "^6.0.3",
    "connect": "^3.7.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "fancy-log": "^2.0.0",
    "husky": "^8.0.1",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jsdoc": "^3.6.11",
    "jsdoc-plugin-typescript": "^2.1.1",
    "jsdoc-plugin-typescript-new": "^1.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-source-map-support": "^1.4.0",
    "karma-typescript": "^5.5.3",
    "karma-webpack": "^5.0.0",
    "lcov-cli-report-viewer": "^2.0.0",
    "lcov-result-merger": "^3.3.0",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "nyc": "^15.1.0",
    "path-browserify": "^1.0.1",
    "phantomjs-prebuilt": "^2.1.16",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "puppeteer": "^17.0.0",
    "rimraf": "^3.0.2",
    "transform-loader": "^0.2.4",
    "ts-loader": "^9.3.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "webpack": "^5.74.0"
  },
  "dependencies": {
    "@rkesters/path-loader": "2.0.2",
    "bluebird": "^3.7.2",
    "commander": "~9.4.0",
    "graphlib": "^2.1.8",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "uri-js": "^4.4.1"
  }
}
