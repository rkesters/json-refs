{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [ "ES6", "DOM"],
    "inlineSourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [ "mocha", "node"]
  },
  "exclude": ["node_modules", "test"],
  "include": [ "./src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
